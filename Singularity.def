Bootstrap: docker
From: ubuntu:20.04

%files
	./src/* /usr/src
%post
	TZ=America/Chicago
	apt-get update && \
		ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone && \
		apt-get install -y libqt5gui5 pymol && \
		apt-get install -y python3-pip &&\
		pip install pandas && \
		pip install biopython
		cd /usr/src
%environment
	export TZ=America/Chicago
%runscript
	cd /usr/src
	exec /bin/bash pymol -c ./make_comparison_figure.py "$@"
